<%- include('layouts/header') %>

<div class="bg-gray-100 flex justify-center items-center h-screen">
    <form class="bg-white p-8 rounded shadow-md max-w-md" action="/add" method="post">
        <% let errors = locals.errors || [] %>
        <% if (errors.length > 0) { %>
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                <strong>Error:</strong>
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        
        <label class="block mb-2" for="email">Email:</label>
        <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
        <label class="block mb-2" for="password">Password:</label>
        <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
        <label class="block mb-2" for="role">Role:</label>
        <input type="text" id="role" name="role" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
        
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 focus:outline-none">
            Submit
        </button>
    </form>
</div>

<%- include('layouts/footer') %>

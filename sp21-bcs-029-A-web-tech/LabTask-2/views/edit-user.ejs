<% include ('layouts/header') %>

<div  class="bg-gray-100 flex justify-center items-center h-screen">
    <h1>edit user <%- user.name %> </h1>
    <form class="bg-white p-8 rounded shadow-md max-w-md" action="/update/<%=user._id%>" method="post">
        <label class="block mb-2" for="email">Email:</label>
        <input value="<%= user.email %>" type="email" id="email" name="email" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
        <label class="block mb-2" for="role">Role:</label>
        <input type="text" value="<%= user.role %>" id="role" name="role" class="w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
        
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 focus:outline-none">
            Submit
        </button>
    </form>
</div>


<% include ('layouts/footer') %>